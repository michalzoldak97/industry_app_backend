pipeline {
    agent any
    triggers {
        githubPush()
    }
    stages {
        stage('Build') {
            steps {
                
                echo 'Building..'
                sh '''#!/bin/bash
                 echo "hello world" 
                 cp /home/paleta77/industry_app/.env ./ -r
                '''
                sh "docker run hello-world"
                sh "docker-compose build"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh '''#!/bin/bash
                 docker-compose up
                '''
            }
        }
    }
}



